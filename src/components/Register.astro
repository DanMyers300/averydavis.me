---
import siteConfig from '../data/site-config';
import '../styles/global.css';
---

<form class="max-w-md mx-auto space-y-4" action="/api/register" method="POST">
    <div>
        <label for="name" class="block">Your Name</label>
        <input type="text" id="name" name="name" class="w-full rounded-md border border-gray-300 focus:border-blue-500 focus:ring-blue-500" />
    </div>
    <div>
        <label for="student-name" class="block">Student's Name</label>
        <input type="text" id="student-name" name="student-name" class="w-full rounded-md border border-gray-300 focus:border-blue-500 focus:ring-blue-500" />
    </div>
    <div>
        <label for="phone" class="block">Phone Number</label>
        <input type="tel" id="phone" name="phone" class="w-full rounded-md border border-gray-300 focus:border-blue-500 focus:ring-blue-500" />
    </div>
    <div>
        <label for="email" class="block">Email</label>
        <input type="email" id="email" name="email" class="w-full rounded-md border border-gray-300 focus:border-blue-500 focus:ring-blue-500" />
    </div>
    <div>
        <label for="service" class="block">Service Requested</label>
        <select id="service" name="service" class="w-full rounded-md border border-gray-300 focus:border-blue-500 focus:ring-blue-500">
            <option value="single-class">Academic Tutoring</option>
            <option value="recurring">Academic Coaching</option>
        </select>
    </div>
    <div>
        <label for="Focus Areas" class="block">Focus Areas</label>
        <input type="text" id="focus" name="focus" class="w-full rounded-md border border-gray-300 focus:border-blue-500 focus:ring-blue-500" />
    </div>
    <div>
        <label for="Notes" class="block">Notes</label>
        <input type="text" id="notes" name="notes" class="w-full rounded-md border border-gray-300 focus:border-blue-500 focus:ring-blue-500" />
    </div>
    <div>
        <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">Submit</button>
    </div>
</form>
